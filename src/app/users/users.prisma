model Profile {
  id     Int  @id @default(autoincrement())
  user   User @relation(fields: [userId], references: [id])
  userId Int  @unique

  @@map("profiles")
}

model User {
  id           Int       @id @default(autoincrement())
  name         String
  email        String    @unique
  password     String
  birthday     DateTime?
  refreshToken String    @default("")
  role         Role      @default(MENTEE)
  Profile      Profile?

  @@map("users")
}

enum Role {
  MENTEE
  MENTOR
}
