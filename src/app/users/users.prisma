model User {
  id           Int           @id @default(autoincrement())
  name         String
  email        String        @unique
  password     String
  role         Role          @default(MENTEE)
  refreshToken RefreshToken?

  @@map("users")
}

model RefreshToken {
  id           Int    @id @default(autoincrement())
  refreshToken String @default("")
  user         User   @relation(fields: [userId], references: [id])
  userId       Int    @unique

  @@map("refresh_tokens")
}

enum Role {
  MENTEE
  MENTOR
}
